{{! Pagina de inicio del servidor }}
<div class="container">
	<h1>Productos Disponibles</h1>
	<div class="products-grid">
		{{#each products}}
			<div class="product-card">
				<h2>{{this.title}}</h2>
				<p>{{this.description}}</p>
				<p><strong>Precio:</strong> ${{this.price}}</p>
				<a href="/products/{{this._id}}" class="btn">Ver Detalles</a>
				<button class="btn add-to-cart" data-id="{{this._id}}">Agregar al
					Carrito</button>
			</div>
		{{/each}}
	</div>

	<!-- Paginación -->
	<div class="pagination">
		{{#if hasPrevPage}}
			<a href="{{prevLink}}" class="btn">Anterior</a>
		{{/if}}
		<span>Página {{page}} de {{totalPages}}</span>
		{{#if hasNextPage}}
			<a href="{{nextLink}}" class="btn">Siguiente</a>
		{{/if}}
	</div>
</div>

<script src="/js/cart.js"></script>